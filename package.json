{
  "name": "repo-counts",
  "version": "0.0.1",
  "description": "Count the code in your repo(s)",
  "main": "src/index.mjs",
  "bin": {
    "repo-counts": "cli.js"
  },
  "type": "module",
  "scripts": {
    "help": "node src/index.mjs -h",
    "test:config": "node spec/run.mjs",
    "test": "mocha ./spec/*.spec.mjs -R min",
