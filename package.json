  "devDependencies": {
    "@babel/eslint-parser": "7.14.7",
    "@babel/plugin-syntax-top-level-await": "7.14.5",
    "eslint": "7.30.0",
    "eslint-config-qb": "1.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "mocha": "^9.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autioch/repo-counts.git"
  },
  "keywords": [
    "git",
    "counter",
    "repository",
    "report",
    "cloc",
    "loc"
  ],
